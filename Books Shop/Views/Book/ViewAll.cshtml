@model IEnumerable<Books_Shop.Models.Book>



@{
    ViewBag.Title = "ViewAll";
    Layout = null;
}


<table class="table table-striped table-condensed" id="bookTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalEditions)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CurrentEditions)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalEditions)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CurrentEditions)
                </td>
                <td>
                    @*@Html.ActionLink("Edit", "AddUpdate", "Book", new { @class = "btn btn-danger btn-sm" })
                        @Html.ActionLink("Delete", "Delete", "Book", new { @class = "btn btn-danger btn-sm" })*@

                    <a class="btn btn-primary btn-sm" onclick="Edit('@Url.Action("AddUpdate", "Book", new { Id=@item.Id })')"><i class="fa fa-pencil fa-lg"></i></a>
                    <a class="btn btn-danger btn-sm" onclick="Delete('@Url.Action("Delete", "Book", new { Id=@item.Id })')"><i class="fa fa-trash fa-lg"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>



<script src="~/Scripts/Scripts.js"></script>






